        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=divoom-pixoo-64"
          },
          {
            "type": "checkbox",
            "name": "clear",
            "required": true,
            "title": {
              "en": "Clear current text"
            }
          },
          {
            "type": "text",
            "name": "text",
            "required": true,
            "title": {
              "en": "Text"
            }
          },
          {
            "type": "range",
            "name": "x",
            "min": 0,
            "max": 63,
            "step": 1,
            "required": true,
            "title": {
              "en": "X-Position"
            }
          },
          {
            "type": "range",
            "name": "y",
            "min": 0,
            "max": 63,
            "step": 1,
            "required": true,
            "title": {
              "en": "Y-Position"
            }
          },
          {
            "type": "dropdown",
            "name": "direction",
            "required": true,
            "title": {
              "en": "Scroll direction"
            },
            "values": [
              {
                "id": "0",
                "title": {
                  "en": "Left"
                }
              },
              {
                "id": "1",
                "title": {
                  "en": "Right"
                }
              }
            ]
          },
          {
            "type": "range",
            "name": "textWidth",
            "min": 16,
            "max": 63,
            "step": 1,
            "required": true,
            "title": {
              "en": "Text width"
            }
          },
          {
            "type": "range",
            "name": "speed",
            "min": 1,
            "max": 100,
            "step": 1,
            "required": true,
            "title": {
              "en": "Scroll speed in ms"
            }
          },
          {
            "type": "text",
            "name": "color",
            "required": true,
            "title": {
              "en": "Color hex value"
            }
          },
          {
            "type": "dropdown",
            "name": "align",
            "required": true,
            "title": {
              "en": "Alignment"
            },
            "values": [
              {
                "id": "1",
                "title": {
                  "en": "Left"
                }
              },
              {
                "id": "2",
                "title": {
                  "en": "Middle"
                }
              },
              {
                "id": "3",
                "title": {
                  "en": "Right"
                }
              }
            ]
          }
        ]
      },
