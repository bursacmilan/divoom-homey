        "title": {
          "en": "Start a new timer"
        },
        "titleFormatted": {
          "en": "Start a timer for [[minutes]] minutes and [[seconds]] seconds."
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=divoom-pixoo-64"
