            "type": "range",
            "name": "minutes",
            "min": 0,
            "max": 99,
            "step": 1,
            "required": true,
            "title": {
              "en": "Minutes"
            }
          },
          {
            "type": "range",
            "name": "seconds",
            "min": 0,
            "max": 59,
            "step": 1,
            "required": true,
            "title": {
              "en": "Seconds"
            }
          }
        ]
      },
      {
        "id": "stop_timer",
        "title": {
          "en": "Stop the current timer"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=divoom-pixoo-64"
          }
        ]
      },
